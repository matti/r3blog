<% form_for [:admin, @post] do |f| %>

	<%= f.label :topic %> <%= f.text_field :topic, :size => 80 %><br/>
	
	<%= f.text_area :body, :rows => 30, :cols => 120 %><br/>
	
	keywords: <%= f.text_field :keywords, :size => 80 %><br/>
	<%= datetime_select("post", "published_at") if @post.published_at %>
	
	<%= submit_tag "ok" %>
<% end %>

<%= link_to "preview", admin_post_path(@post) %><br/>
<%= link_to (@post.published_at ? "unpublish" : "publish" ), toggle_publish_admin_post_path(@post) %>
